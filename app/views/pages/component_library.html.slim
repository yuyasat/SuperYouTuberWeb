  .l-footer
    .footer
      .footer__inner
        .footer__logo
          a[href="#"]
            img[src=(asset_path "logo.svg") alt="Super YouTuber"]/
        .footer__nav
          - [\
              ['編集者ブログ', '#'], \
              ['このサイトについて', '#'], \
              ['お問い合わせ', '#'], \
              ['プライバシーポリシー', '#'], \
              ['サイトマップ', '#'], \
            ].each do |label, url|
            li
              a[href=url] = label
