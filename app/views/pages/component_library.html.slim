- content_for :title do
  = 'component library'

.page-header.header-border

  / header
  .header
    .header__inner
      .header__logo
        img[src=(asset_path "logo.svg") alt="Super YouTuber"]/
      a.header__serach-button href="#"
        span 動画をさがす
        i.fa.fa-search
    
    .header__search-panel
      .header__keyword-search

        / keyword-search
        .keyword-search
          .keyword-search__field
            input type="text" placeholder="キーワードから動画をさがす"/
          .keyword-search__submit
            button.button 検索
      .header__menu

        / menu
        .menu
          ul.menu__list
            - [\
                ['youtuber', 'user', 'YouTuber', '#'], \
                ['category', 'list', 'カテゴリ', '#'], \
                ['map', 'map', '地図', '#'], \
                ['music', 'music', 'ミュージック', '#'], \
              ].each do |key, icon, label, url|
              li.menu__item
                a[href=url]
                  i.fa[class="fa-#{icon} is-#{key} menu__icon"]
                  div
                    span.menu__main = label
                    span.menu__sub の動画をさがす

  / button
  a.button.is-primary.is-size-s[href="#"]
    span もっと見る



  .item-list
    .item-list__head
      / section-title
      .section-title
        .section-title__inner
          .section-title__title 編集部のおすすめ動画
          .section-title__right-button
            a.button.is-size-s[href="#"]
              span もっと見る
    .item-list__list
      - for i in 0..5
        .item-list__item
          / video (size-m)
          .video.is-size-m
            .video__inner
              .video__thumb
                a[href="#"]
                  img[src=(asset_path "dummy_336x188.png") alt=""]/
              .video__text
                .video__title
